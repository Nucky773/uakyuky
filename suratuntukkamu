      font-size: 1em;
      cursor: pointer;
      margin-top: 20px;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #ff3e6c;
    }

    #surat-text {
      white-space: pre-wrap;
      text-align: left;
      font-size: 1.1em;
      margin-top: 20px;
      color: #fff;
    }

    .emoji {
      font-size: 2em;
      position: absolute;
      animation: float 6s infinite ease-in-out;
      user-select: none;
    }

    .emoji:nth-child(4) {
      top: 20%;
