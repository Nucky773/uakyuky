<body>
  <div class="container">
    <div class="envelope">
      <h1>Hai Kamu 😘</h1>
      <p id="surat-text"></p>
      <button onclick="tampilkanSurat()">Buka Surat 💌</button>
      <div class="emoji">💖</div>
      <div class="emoji">🥰</div>
      <div class="emoji">💫</div>
    </div>
  </div>

  <script>
    const teksSurat = `Aku cuma mau bilang...
Kamu itu spesial banget buat aku 💖

Setiap hari aku bersyukur bisa kenal kamu, 
ngobrol sama kamu, dan ngerasain semua momen yang bikin senyumku ga bisa ilang 😌

Maaf kalo kadang aku nyebelin, tapi beneran deh...
Aku sayang banget sama kamu 🥺❤️

Jangan pernah ragu ya...
Karena aku di sini, buat kamu.`;

    function tampilkanSurat() {
      let i = 0;
      const speed = 40;
      const suratText = document.getElementById("surat-text");
      suratText.innerHTML = "";

      function ketik() {
        if (i < teksSurat.length) {
          suratText.innerHTML += teksSurat.charAt(i);
          i++;
          setTimeout(ketik, speed);
        }
      }

      ketik();
    }
  </script>
</body>
